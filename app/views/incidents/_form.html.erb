<%= form_for(@incident) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :location %><br />
    <div id='gmaps-canvas'></div><br />

    <div id='input'>
      <!--<input id='location' placeholder='Start typing a place name...' type='text' />-->
      <%= f.text_field :location %>
      <div id='gmaps-error'></div>
    </div>

  </div>

  <div class="field">
    <%= f.label :date_of_incident %><br />
    <%= f.text_field :date_of_incident, {"data-behaviour" => 'datepicker'} %>
  </div>
  <div class="field">
    <%= f.label :type_of_harassment %><br />
    <%= f.collection_select :harassment_id, Harassment.all, :id, :type_of_harassment, {prompt: 'Select Type of Harassment'} %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>

    <%=f.hidden_field :longitude %>
    <%=f.hidden_field :latitude %>

  <div class="actions">
    <%= f.submit :class => 'btn btn-primary'%>
  </div>
<% end %>
